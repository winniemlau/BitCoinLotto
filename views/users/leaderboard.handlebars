<h2 class = "center-align">Past Community Bets</h2>

<br>
<br>

<div class='row'>
  <div class="col s12 m4 l2"><p></p></div>

    <div class="col s12 m4 l8 center-align">
      <table>
        <thead>
          <tr>
              <th data-field="id">User Name</th>
              <th data-field="bet_amount">Bet Ammount</th>
              <th data-field="bet_on">Bet On</th>
              <th data-field="win_loss">Win / Loss</th>
          </tr>
        </thead>

        <tbody>
          {{#each cats}}
            <tr>
              <td>
                {{this.user_name}}
              </td>
              <td>
                {{this.bet_ammount}}
              </td>
              <td>
                {{this.bet_choice}}
              </td>
              <td>
                {{this.win_loss}}
              </td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>

    <div class="col s12 m4 l2"><p></p></div>
</div>

