{{#if username}}
  Welcome {{username}}! Let's play a game.
{{/if}}

{{#unless logged_in}}
  <p> Sign up to play Lotto! </p>
{{/unless}}


  <!-- bet window -->
<div class="container">
  <div class="row">
    <div class="col m10 offset-m1 s12">
      <div class="row">
        <form class="col s12">
          <h3>Current Balance:</h3>
          <div class="input-field col m12 s12 center-align">
            <input placeholder="$" id="bet_amount" type="text" class="validate">
          </div>

          <div class="row center-align">
            <p>Pick a slice to bet on.</p>
            <div class="input-field col m3 s6 l6 center-align">
              <input name="group1" type="radio" id="google" />
              <label for="google">Red <br> Odds: 1to2 <br> Payout: 1to1</label>
            </div>
            <div class="input-field col m3 s6 l6 center-align">
              <input name="group1" type="radio" id="customer" />
              <label for="customer">Blue <br> Odds: 7to24 <br> Payout: 2to1</label>
            </div>
            <div class="input-field col m3 s6 l4 center-align">
              <input name="group1" type="radio" id="store" />
              <label for="store">Yellow <br> Odds: 3to24 <br> Payout: 5to1</label>
            </div>
            <div class="input-field col m3 s6 l4 center-align">
              <input name="group1" type="radio" id="other" />
              <label for="other">Green <br> Odds: 1to24 <br> Payout: 20to1</label>
            </div>
            <div class="input-field col m3 s6 l4 center-align">
              <input name="group1" type="radio" id="other" />
              <label for="other">Orange <br> Odds: 1to24 <br> Payout 40to1</label>
            </div>
          </div>

          <br>
          <br>

          <div class="row">
            <div class="col m12">
              <!-- Modal Trigger -->
              <a class="waves-effect waves-light btn modal-trigger" href="#modal2">Spin the Wheel!</a>

              <!-- Modal Structure Insert wheel animation here-->
              <div id="modal2" class="modal">
                <div class="modal-content">
                  <h4>Modal Header</h4>
                  <p>A bunch of text</p>
                </div>
                <div class="modal-footer">
                  <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                </div>
              </div>

            </div>
          </div>

        </form>
        <ul class="collection with-header">
          <li class="collection-header"><h4>Past Bets:</h4></li>
          <li class="collection-item">Alvin</li>
          <li class="collection-item">Alvin</li>
          <li class="collection-item">Alvin</li>
          <li class="collection-item">Alvin</li>
        </ul>
      </div>
    </div>
  </div>
</div>



  {{#if balance}}
      Your balance is {{balance}} !
  {{/if}}
